{
  "name": "express-microservice",
  "version": "1.0.0",
  "description": "Express Microservice Starter Project",
  "main": "index.js",
  "scripts": {
    "start": "node build/main",
    "start:docker": "node main",
    "compile": "node build.js && backpack build",
    "dev": "node build.js && backpack dev",
    "dash": "nodejs-dashboard -- node -r nodejs-dashboard build/main",
    "test": "node build.js && npm run lint && jest --forceExit",
    "lint": "npm run tslint -- -o reports/lint_issues.json -t json --force \"server/**/*.ts\" ",
    "tslint": "node_modules/.bin/tslint",
    "sonar-scanner": "sonar-scanner"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/server/**/*.spec.(ts)"
    ],
    "testEnvironment": "node",
    "mapCoverage": true,
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/server/**/*.{ts}",
      "!**/node_modules/**",
      "!**/build/**"
    ]
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml",
    "indent": 4,
    "sonar56x": true
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "express-bunyan-logger": "^1.3.2",
    "express-partial-response": "^0.3.4",
    "express-pino-logger": "^2.0.0",
    "fs": "0.0.1-security",
    "helmet": "^3.6.1",
    "lodash": "^4.17.4",
    "node-rx-http": "^1.0.1",
    "pino-multi-stream": "^3.1.1",
    "prom-client": "^9.1.1",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "response-time": "^2.3.2",
    "rxjs": "^5.4.2",
    "source-map-support": "^0.4.12",
    "swagger-express-middleware": "^1.0.0-alpha.12",
    "swagger-ui-express": "^2.0.7",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bunyan": "0.0.36",
    "@types/express": "^4.0.35",
    "@types/jest": "^20.0.8",
    "@types/pino": "^4.7.0",
    "@types/request": "^2.0.0",
    "@types/supertest": "^2.0.3",
    "awesome-typescript-loader": "^3.1.3",
    "backpack-core": "^0.4.2",
    "istanbul": "^1.1.0-alpha.1",
    "jest": "^21.0.1",
    "jest-sonar-reporter": "^1.3.0",
    "nodejs-dashboard": "^0.4.1",
    "shelljs": "^0.7.6",
    "supertest": "^3.0.0",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.1.0",
    "tslint": "^5.3.2",
    "tslint-config-standard": "^6.0.1",
    "typedoc": "^0.8.0",
    "typedoc-webpack-plugin": "^1.1.4",
    "typescript": "^2.4.2"
  }
}
