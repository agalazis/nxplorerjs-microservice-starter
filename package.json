{
  "name": "nxplorerjs-microservice",
  "version": "1.4.1",
  "description": "Express Microservice Starter Project",
  "main": "index.js",
  "scripts": {
    "start": "node build/main",
    "start:docker": "node main",
    "compile": "node build.js && backpack build",
    "dev": "node build.js && backpack dev",
    "dash": "nodejs-dashboard -- node -r nodejs-dashboard build/main",
    "test": "node build.js && npm run lint && jest --forceExit",
    "lint": "npm run tslint -- -o reports/lint_issues.json -t json --force \"server/**/*.ts\" ",
    "tslint": "tslint",
    "sonar-scanner": "sonar-scanner"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/server/**/*.spec.(ts)"
    ],
    "testEnvironment": "node",
    "mapCoverage": true,
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/server/**/*.{ts}",
      "!**/node_modules/**",
      "!**/build/**"
    ]
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml",
    "indent": 4,
    "sonar56x": true
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.15.2",
    "brakes": "^2.5.3",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-partial-response": "^0.3.4",
    "graphql": "^0.11.7",
    "graphql-server-express": "^1.2.0",
    "graphql-subscriptions": "^0.5.4",
    "graphql-tools": "^2.7.2",
    "helmet": "^3.6.1",
    "inversify": "^4.5.1",
    "inversify-express-utils": "^5.0.0",
    "lodash": "^4.17.4",
    "node-fetch": "^1.7.3",
    "node-rx-http": "^1.0.1",
    "pino": "^4.8.1",
    "prom-client": "^10.1.1",
    "reflect-metadata": "^0.1.10",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "response-time": "^2.3.2",
    "rxjs": "^5.4.2",
    "source-map-support": "^0.5.0",
    "subscriptions-transport-ws": "^0.9.1",
    "swagger-express-middleware": "^1.0.0-alpha.12",
    "swagger-ui-express": "^2.0.7",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/jest": "^21.1.0",
    "@types/request": "^2.0.0",
    "@types/supertest": "^2.0.3",
    "@types/zen-observable": "^0.5.3",
    "apollo-link": "^1.0.3",
    "awesome-typescript-loader": "^3.1.3",
    "backpack-core": "^0.4.2",
    "jest": "^21.1.0",
    "jest-sonar-reporter": "^1.3.0",
    "nodejs-dashboard": "^0.4.1",
    "shelljs": "^0.7.6",
    "supertest": "^3.0.0",
    "swagger-jsdoc": "^1.9.7",
    "ts-jest": "^21.0.0",
    "ts-node": "^4.0.1",
    "tslint": "^5.3.2",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.9.0",
    "typedoc-webpack-plugin": "^1.1.4",
    "typescript": "^2.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ERS-HCL/nxplorerjs-microservice-starter.git"
  },
  "keywords": [
    "cloud",
    "native",
    "microservice",
    "express",
    "reactive",
    "12-factor"
  ],
  "author": "Tarun Kumar Sukhu <tksukhu@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ERS-HCL/nxplorerjs-microservice-starter/issues"
  },
  "homepage": "https://github.com/ERS-HCL/nxplorerjs-microservice-starter#readme"
}
